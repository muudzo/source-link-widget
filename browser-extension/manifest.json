{
  "manifest_version": 3,
  "name": "Source Link Widget",
  "version": "1.0.0",
  "description": "Never forget where your links came from! Save and organize your browsing sources.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://your-domain.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Source Link Widget"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
